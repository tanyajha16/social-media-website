<div id="home-section">
        <div id="left-section">
<div id="post-section">
        <section id="feed-posts">
                <% if(locals.user) { %>
                        <h1>HOME PAGE</h1>
                        <h4>Posts</h4>
                <form action="/posts/create" id="new-post-form"  method="POST">
              <textarea name="content" cols="30" rows="3"  placeholder="do the post" required>
        </textarea>    <br>
                <input type="submit" value="Post"><br><br>
                </form>
        </div>               

  <div id="posts-list-container">
      <ul>
        
        <% for (post of posts){ %>
                <div id="list_item">
                
                <%- include('_post') -%>

        </div>
                <% } %><br><br>
              </ul>
              </div>
        </div>

             <!-- to show all the friends -->
             <section id="user-friends">
                     <h4>Friends</h4>
                     <% for(u of all_users) {%>
                       <p>
                            <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
                       </p>
                        <% } %>
             </section>
             <% } %>
        </div>
<%- include('_chat_box') %>
</section>
<script src="/js/home_posts.js"></script>
<script src="/js/home_posts_comments.js"></script>


<!-- including the socket.io js -->
<script src=" https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
<script src="/js/chat_engine.js"></script>
<% if(locals.user) {%>
<script >
        new ChatEngine('user-chat-box','<%= locals.user._id %>')
</script>
<% } %>


